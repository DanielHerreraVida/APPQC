<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_card_background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Filter History"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="16dp" />

                <!-- QA Inspector -->
                <CheckBox
                    android:id="@+id/checkboxQaInspectorAll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="All QA Inspectors"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:id="@+id/tvQaInspectorChoosed"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=""
                        android:textSize="14sp"
                        android:padding="12dp"
                        android:background="@drawable/border_background"
                        android:hint="No QA Inspectors selected" />

                    <Button
                        android:id="@+id/btnQaInspector"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Select"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton" />
                </LinearLayout>

                <!-- Growers -->
                <CheckBox
                    android:id="@+id/checkboxGrowersAll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="All Growers"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:id="@+id/tvGrowerChoosed"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=""
                        android:textSize="14sp"
                        android:padding="12dp"
                        android:background="@drawable/border_background"
                        android:hint="No growers selected" />

                    <Button
                        android:id="@+id/btnGrowers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Select"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton" />
                </LinearLayout>

                <!-- Customers -->
                <CheckBox
                    android:id="@+id/checkboxCustomersAll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="All Customers"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:id="@+id/tvCustomerChoosed"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=""
                        android:textSize="14sp"
                        android:padding="12dp"
                        android:background="@drawable/border_background"
                        android:hint="No customers selected" />

                    <Button
                        android:id="@+id/btnCustomers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Select"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton" />
                </LinearLayout>

                <!-- Inspection Status -->
                <CheckBox
                    android:id="@+id/checkboxInspectionStatusAll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="All Inspection Status"
                    android:textSize="14sp" />

                <RadioGroup
                    android:id="@+id/radioGroupInspectionStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <RadioButton
                        android:id="@+id/rbAccepted"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Accepted" />

                    <RadioButton
                        android:id="@+id/rbRejected"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Rejected" />
                </RadioGroup>
                <!-- Barcodes Card -->
                <!-- Barcodes Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="0dp"
                    app:cardBackgroundColor="#FFFFFF">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Barcodes"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#212121"
                            android:layout_marginBottom="12dp" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            app:boxBackgroundMode="outline"
                            app:boxCornerRadiusTopStart="8dp"
                            app:boxCornerRadiusTopEnd="8dp"
                            app:boxCornerRadiusBottomStart="8dp"
                            app:boxCornerRadiusBottomEnd="8dp"
                            app:endIconMode="clear_text"
                            android:hint="Scan barcode">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etSearch"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="text"
                                android:imeOptions="actionDone|flagNoExtractUi"
                                android:singleLine="true"
                                android:maxLines="1"
                                android:textSize="16sp"
                                android:padding="16dp"
                                android:focusable="true"
                                android:focusableInTouchMode="true">

                                <requestFocus />
                            </com.google.android.material.textfield.TextInputEditText>
                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- ✅ Nuevo LinearLayout con 3 botones -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="12dp">

                            <!-- ✅ NUEVO: Botón Select Barcodes -->
                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnSelectBarcodes"
                                android:layout_width="0dp"
                                android:layout_height="48dp"
                                android:layout_weight="1"
                                android:text="Select"
                                android:textColor="#FFFFFF"
                                android:backgroundTint="#2196F3"
                                app:iconTint="#FFFFFF"
                                app:cornerRadius="8dp"
                                android:textAllCaps="false"
                                android:textSize="15sp"
                                android:layout_marginEnd="6dp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnScanBarcode"
                                android:layout_width="0dp"
                                android:layout_height="48dp"
                                android:layout_weight="1"
                                android:text="Scan"
                                android:textColor="#FFFFFF"
                                android:backgroundTint="#FF9800"
                                app:iconTint="#FFFFFF"
                                app:cornerRadius="8dp"
                                android:textAllCaps="false"
                                android:textSize="15sp"
                                android:layout_marginStart="2dp"
                                android:layout_marginEnd="6dp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnClearBarcodes"
                                android:layout_width="0dp"
                                android:layout_height="48dp"
                                android:layout_weight="1"
                                android:text="Clear"
                                android:textColor="#757575"
                                android:backgroundTint="#FFFFFF"
                                app:strokeColor="#E0E0E0"
                                app:strokeWidth="1dp"
                                app:cornerRadius="8dp"
                                android:textAllCaps="false"
                                android:textSize="15sp"
                                android:layout_marginStart="2dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="12dp"
                            android:background="#F5F5F5"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/baseline_qr_code_scanner_24"
                                android:layout_marginEnd="12dp"
                                app:tint="#757575" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tvBarcodesCount"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="No barcodes scanned"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:textColor="#424242" />

                                <TextView
                                    android:id="@+id/tvBarcodesList"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textSize="12sp"
                                    android:textColor="#757575"
                                    android:maxLines="2"
                                    android:ellipsize="end"
                                    android:layout_marginTop="4dp" />
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- AWB - Order Numbers -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="#E0E0E0">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="AWB - NUM"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#212121"
                            android:layout_marginBottom="12dp" />

                        <CheckBox
                            android:id="@+id/checkboxAwbAll"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="All AWB"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="12dp">

                            <TextView
                                android:id="@+id/tvAwbChoosed"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text=""
                                android:textSize="14sp"
                                android:padding="12dp"
                                android:background="@drawable/border_background"
                                android:hint="No AWB selected" />

                            <Button
                                android:id="@+id/btnAwb"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="Select"
                                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />
                        </LinearLayout>

                        <CheckBox
                            android:id="@+id/checkboxOrderNumAll"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="All Order Numbers"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvOrderNumChoosed"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text=""
                                android:textSize="14sp"
                                android:padding="12dp"
                                android:background="@drawable/border_background"
                                android:hint="No Order Numbers selected" />

                            <Button
                                android:id="@+id/btnOrderNum"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="Select"
                                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Dates -->
                <CheckBox
                    android:id="@+id/checkboxInspectionDateAll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="All Inspection Dates"
                    android:textSize="14sp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:hint="Start Date"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etFechaInicial"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:clickable="true"
                        android:text="MM/DD/YYYY"
                        android:drawableEnd="@drawable/baseline_calendar_month_24"
                        android:textSize="16sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:hint="End Date"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etFechaFinal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:clickable="true"
                        android:text="MM/DD/YYYY"
                        android:drawableEnd="@drawable/baseline_calendar_month_24"
                        android:textSize="16sp" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Bottom Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="12dp">

            <Button
                android:id="@+id/btnClearFilters"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Clear Filters"
                android:textColor="@color/white"
                android:backgroundTint="#B71C1C"
                style="@style/Widget.MaterialComponents.Button" />

            <Space
                android:layout_width="12dp"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/btnSaveFilters"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Save Filters"
                android:textColor="@color/white"
                style="@style/Widget.MaterialComponents.Button" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>