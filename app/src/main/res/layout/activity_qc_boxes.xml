<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomButtonsLayout"
        android:fillViewport="false">

        <LinearLayout
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E0E0E0"
                android:padding="8dp">

                <TextView
                    android:text="AWB:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/AWBTV"
                    android:text="-"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:textSize="12sp"/>

                <TextView
                    android:text="Date:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/TELEXTV"
                    android:text="-"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:textSize="12sp"/>

                <TextView
                    android:text="Farm:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/FARMTV"
                    android:text="-"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:textSize="12sp"/>

                <TextView
                    android:text="Barcode:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/BarcodeTV"
                    android:text="-"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/SelectedBoxesTotalTV"
                android:text="Selected Boxes: 0"
                android:textStyle="bold"
                android:layout_marginTop="12dp"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#CCCCCC"
                android:padding="4dp"
                android:layout_marginTop="4dp">

                <TextView
                    android:text="Farm"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="11sp"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="Barcode"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="11sp"
                    android:layout_width="62dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="Type"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="11sp"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="Variety"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="11sp"
                    android:layout_width="62dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="Color"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="11sp"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="Grade"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="11sp"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="NUM"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="11sp"
                    android:layout_width="32dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="Pack"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="11sp"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_QCBoxesSelected"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:nestedScrollingEnabled="true"
                android:scrollbars="vertical"/>
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">

                <CheckBox
                    android:id="@+id/CB_SelectAllRelated"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/RelatedBoxesTotalTV"
                    android:text="Related Boxes: 0"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#CCCCCC"
                android:padding="4dp"
                android:layout_marginTop="4dp">

                <TextView
                    android:text="Farm"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="11sp"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="Barcode"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="11sp"
                    android:layout_width="62dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="Type"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="11sp"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="Variety"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="11sp"
                    android:layout_width="62dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="Color"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="11sp"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="Grade"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="11sp"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="NUM"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="11sp"
                    android:layout_width="32dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="Pack"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="11sp"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_QCBoxesRelated"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:nestedScrollingEnabled="true"
                android:scrollbars="vertical"/>

            <TextView
                android:id="@+id/AllBoxesTotalTV"
                android:text="All Boxes: 0"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#CCCCCC"
                android:padding="4dp"
                android:layout_marginTop="4dp">

                <TextView
                    android:text="Farm"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="11sp"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="Barcode"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="11sp"
                    android:layout_width="62dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="Type"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="11sp"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="Variety"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="11sp"
                    android:layout_width="62dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="Color"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="11sp"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="Grade"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="11sp"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="NUM"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="11sp"
                    android:layout_width="32dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="Pack"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="11sp"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_QCBoxesAll"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:nestedScrollingEnabled="true"
                android:scrollbars="vertical"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="16dp"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/bottomButtonsLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        android:elevation="8dp"
        android:padding="8dp">

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:visibility="gone"
            android:indeterminate="true"/>

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_CancelBI"
                android:text="CANCEL"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/holo_red_dark"
                android:textColor="@android:color/white"
                android:textStyle="bold"/>

            <Space
                android:layout_width="32dp"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/btn_ContinueBI"
                android:text="CONTINUE"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/holo_green_dark"
                android:textColor="@android:color/white"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>