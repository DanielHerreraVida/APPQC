<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:imeOptions="actionSearch"
    android:background="#F5F5F5">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:paddingBottom="90dp"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Filters"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#212121" />

                <TextView
                    android:id="@+id/tvFilterCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 active"
                    android:textSize="13sp"
                    android:textColor="#757575"
                    android:background="#E0E0E0"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:layout_marginEnd="8dp" />
            </LinearLayout>

            <!-- Source Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Source"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#212121" />

                        <CheckBox
                            android:id="@+id/cbAuthorAll"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="All"
                            android:textSize="14sp"
                            android:textColor="#212121"
                            android:checked="true"
                            android:buttonTint="#4CAF50" />
                    </LinearLayout>

                    <Spinner
                        android:id="@+id/spinnerAuthor"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:enabled="true"
                        android:background="@drawable/spinner_background" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Growers Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Growers"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#212121" />

                        <CheckBox
                            android:id="@+id/cbGrowersAll"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="All"
                            android:textSize="14sp"
                            android:textColor="#212121"
                            android:checked="true"
                            android:buttonTint="#4CAF50" />
                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnGrowers"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="Select Growers"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="#2196F3"
                        android:enabled="true"
                        app:cornerRadius="8dp"
                        android:textAllCaps="false"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tvGrowerSelected"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="No growers selected"
                        android:textSize="13sp"
                        android:textColor="#9E9E9E"
                        android:layout_marginTop="8dp"
                        android:enabled="true" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Customers Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Customers"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#212121" />

                        <CheckBox
                            android:id="@+id/cbCustomersAll"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="All"
                            android:textSize="14sp"
                            android:textColor="#212121"
                            android:checked="true"
                            android:buttonTint="#4CAF50" />
                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnCustomers"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="Select Customers"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="#2196F3"
                        android:enabled="true"
                        app:cornerRadius="8dp"
                        android:textAllCaps="false"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tvCustomerSelected"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="No customers selected"
                        android:textSize="13sp"
                        android:textColor="#9E9E9E"
                        android:layout_marginTop="8dp"
                        android:enabled="true" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Empty Card (puedes eliminarlo si no lo necesitas) -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                app:cardBackgroundColor="#FFFFFF">

            </com.google.android.material.card.MaterialCardView>
            <!-- Barcodes Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Barcodes"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#212121"
                        android:layout_marginBottom="12dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:boxBackgroundMode="outline"
                        app:boxCornerRadiusTopStart="8dp"
                        app:boxCornerRadiusTopEnd="8dp"
                        app:boxCornerRadiusBottomStart="8dp"
                        app:boxCornerRadiusBottomEnd="8dp"
                        app:endIconMode="clear_text"
                        android:hint="Scan barcode">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etSearch"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:imeOptions="actionDone|flagNoExtractUi"
                            android:singleLine="true"
                            android:maxLines="1"
                            android:textSize="16sp"
                            android:padding="16dp"
                            android:focusable="true"
                            android:focusableInTouchMode="true">

                            <requestFocus />
                        </com.google.android.material.textfield.TextInputEditText>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- ✅ Nuevo LinearLayout con 3 botones -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <!-- ✅ NUEVO: Botón Select Barcodes -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnSelectBarcodes"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:text="Select"
                            android:textColor="#FFFFFF"
                            android:backgroundTint="#2196F3"
                            app:iconTint="#FFFFFF"
                            app:cornerRadius="8dp"
                            android:textAllCaps="false"
                            android:textSize="15sp"
                            android:layout_marginEnd="6dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnScanBarcode"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:text="Scan"
                            android:textColor="#FFFFFF"
                            android:backgroundTint="#FF9800"
                            app:iconTint="#FFFFFF"
                            app:cornerRadius="8dp"
                            android:textAllCaps="false"
                            android:textSize="15sp"
                            android:layout_marginStart="2dp"
                            android:layout_marginEnd="6dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnClearBarcodes"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:text="Clear"
                            android:textColor="#757575"
                            android:backgroundTint="#FFFFFF"
                            app:strokeColor="#E0E0E0"
                            app:strokeWidth="1dp"
                            app:cornerRadius="8dp"
                            android:textAllCaps="false"
                            android:textSize="15sp"
                            android:layout_marginStart="2dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp"
                        android:background="#F5F5F5"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/baseline_qr_code_scanner_24"
                            android:layout_marginEnd="12dp"
                            app:tint="#757575" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvBarcodesCount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="No barcodes scanned"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#424242" />

                            <TextView
                                android:id="@+id/tvBarcodesList"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textSize="12sp"
                                android:textColor="#757575"
                                android:maxLines="2"
                                android:ellipsize="end"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Saved Status Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Saved Status"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#212121" />

                        <CheckBox
                            android:id="@+id/cbSavedAll"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="All"
                            android:textSize="14sp"
                            android:textColor="#212121"
                            android:checked="true"
                            android:buttonTint="#4CAF50" />
                    </LinearLayout>

                    <RadioGroup
                        android:id="@+id/radioGroupSaved"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rbSavedYes"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Saved"
                            android:textSize="15sp"
                            android:textColor="#212121"
                            android:buttonTint="#4CAF50"
                            android:enabled="true" />

                        <RadioButton
                            android:id="@+id/rbSavedNo"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Not Saved"
                            android:textSize="15sp"
                            android:textColor="#212121"
                            android:buttonTint="#4CAF50"
                            android:enabled="true" />

                    </RadioGroup>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:elevation="8dp"
        android:padding="16dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnClearFilters"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:text="Clear"
            android:textColor="#757575"
            android:backgroundTint="#FFFFFF"
            app:strokeColor="#E0E0E0"
            app:strokeWidth="1dp"
            app:cornerRadius="8dp"
            android:textAllCaps="false"
            android:textSize="15sp"
            android:layout_marginEnd="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:text="Cancel"
            android:textColor="#FFFFFF"
            android:backgroundTint="#757575"
            app:cornerRadius="8dp"
            android:textAllCaps="false"
            android:textSize="15sp"
            android:layout_marginEnd="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSaveFilters"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:text="Apply"
            android:textColor="#FFFFFF"
            android:backgroundTint="#4CAF50"
            app:cornerRadius="8dp"
            android:textAllCaps="false"
            android:textSize="15sp" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>