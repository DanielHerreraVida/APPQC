<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:nestedScrollingEnabled="true"
    android:fillViewport="true"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:paddingTop="10dp">

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView1"
                    android:src="@drawable/ic_flower"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="8dp" />
                <LinearLayout
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_OrdNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="10dp"
                        android:paddingTop="5dp"
                        android:paddingEnd="10dp"
                        android:text="AWB"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_OrdRow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:text="ORDER"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textSize="9sp" />

                    <TextView
                        android:id="@+id/tv_OrdBarcode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:text="QTY Boxes"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textSize="9sp" />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/relativeLayoutBTNBoxes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp">

                    <ImageButton
                        android:id="@+id/btnBoxesToInspect"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Boxes to inspect"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_caja" />

                    <TextView
                        android:id="@+id/btnBoxesBadge"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_alignTop="@id/btnBoxesToInspect"
                        android:layout_alignEnd="@id/btnBoxesToInspect"
                        android:layout_marginTop="1dp"
                        android:layout_marginEnd="1dp"
                        android:background="@drawable/badge_circle"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="#FFFFFF"
                        android:textSize="9sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relativeLayoutBTNCamera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clipChildren="false"
                    android:clipToPadding="false">

                    <ImageButton
                        android:id="@+id/btnCamera"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Camera"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_photocamera" />

                    <TextView
                        android:id="@+id/btnCameraBadge"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_alignTop="@id/btnCamera"
                        android:layout_alignEnd="@id/btnCamera"
                        android:layout_marginTop="1dp"
                        android:layout_marginEnd="1dp"
                        android:background="@drawable/badge_circle"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="#FFFFFF"
                        android:textSize="9sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <Space
                    android:id="@+id/space1"
                    android:layout_width="15dp"
                    android:layout_height="match_parent" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/lLGrower"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Grower: " />

                <TextView
                    android:id="@+id/tV_Grower"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lLFloGrade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Flower Grade: " />

                <TextView
                    android:id="@+id/tV_flogra"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lLFloColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Flower Color: " />

                <TextView
                    android:id="@+id/tV_flocolor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lLBxType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Box Type: " />

                <TextView
                    android:id="@+id/tV_boxType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lLDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description: " />

                <TextView
                    android:id="@+id/tV_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="11sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lLCustomer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Customer: " />

                <TextView
                    android:id="@+id/tV_customer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lLQAInspector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="QA Inspector: " />

                <TextView
                    android:id="@+id/tV_QAInspector"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lLDateSent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Date: " />

                <TextView
                    android:id="@+id/tV_DateSent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="15sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tVIssue"
                        android:text="Choose an Issue:"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />

                    <ImageButton
                        android:id="@+id/btnIssues"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Search issue"
                        android:scaleType="fitCenter"
                        android:src="@drawable/customsearchbutton" />

                </LinearLayout>

                <ScrollView
                    android:id="@+id/scrollIssues"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxHeight="120dp"
                    android:nestedScrollingEnabled="true"
                    android:scrollbars="vertical"
                    android:background="@drawable/descriptionissue"
                    android:padding="8dp">

                    <LinearLayout
                        android:id="@+id/containerSelectedIssues"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    </LinearLayout>
                </ScrollView>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearLayout6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvDescript"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Description Issue:" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="28dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tvTotalDescript"
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="" />
            </LinearLayout>

            <EditText
                android:id="@+id/descriptionIssue"
                android:layout_width="match_parent"
                android:layout_height="98dp"
                android:background="@drawable/descriptionissue"
                android:gravity="start|top"
                android:hint="..."
                android:importantForAutofill="no"
                android:inputType="textMultiLine"
                android:maxLines="20"
                android:padding="8dp"
                android:scrollbars="vertical"
                android:textSize="14sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <RadioGroup
                android:id="@+id/radioGroup1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="16dp">

                <RadioButton
                    android:id="@+id/rB_QCNotification"
                    android:text="QC NOTIFICACION"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true" />

                <Space
                    android:layout_width="30dp"
                    android:layout_height="wrap_content" />

                <RadioButton
                    android:id="@+id/rB_QCAction"
                    android:text="QC LOCAL"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RadioGroup>


            <TextView
                android:id="@+id/tVAction"
                android:text="QC LOCAL:"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:visibility="invisible" />

            <LinearLayout
                android:id="@+id/linearLayoutActions"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/TVActionChoosed"
                    android:hint="..."
                    android:textSize="12sp"
                    android:textColor="#000000"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    android:paddingEnd="8dp" />

                <ImageButton
                    android:id="@+id/btnActions"
                    android:src="@drawable/customsearchbutton"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:scaleType="fitCenter"
                    android:visibility="invisible"
                    android:contentDescription="Search action" />
            </LinearLayout>
            <TextView
                android:id="@+id/tVNotification"
                android:text="QC NOTIFICATION:"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:visibility="invisible" />

            <LinearLayout
                android:id="@+id/linearLayoutNotifications"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/TVNotificationChoosed"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="..."
                    android:paddingEnd="8dp"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:visibility="invisible" />

                <ImageButton
                    android:id="@+id/btnNotifications"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Search notification"
                    android:scaleType="fitCenter"
                    android:src="@drawable/customsearchbutton"
                    android:visibility="invisible" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_SaveReport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/savebutton"
                    android:text="SAVE"
                    android:textColor="@android:color/white" />

                <Space
                    android:layout_width="30dp"
                    android:layout_height="match_parent" />

                <Button
                    android:id="@+id/btn_SendReport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/sendbutton"
                    android:text="SEND MAIL"
                    android:textColor="@android:color/white" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>