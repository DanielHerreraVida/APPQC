<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:nestedScrollingEnabled="true"
    android:fillViewport="true"

    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="12dp"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- ===================== CABECERA CON ICONOS ===================== -->
            <LinearLayout
                android:id="@+id/linearLayout3"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingBottom="8dp">

                <!-- Icono de flor -->
                <ImageView
                    android:id="@+id/imageView1"
                    android:src="@drawable/ic_flower"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="8dp" />

                <!-- Información AWB -->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_AWBNumber"
                        android:text="AWB"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tv_TELEXNumber"
                        android:text="AWB DATE"
                        android:textSize="11sp"
                        android:textColor="#666666"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tv_OrdInfo"
                        android:text="-"
                        android:textSize="11sp"
                        android:textColor="#666666"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <!-- Botones con badges -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                                       <!-- Botón Composición con Badge -->
                     <RelativeLayout
                           android:id="@+id/RLComBoxes"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginEnd="12dp">

                          <ImageButton
                               android:id="@+id/btnCompBoxes"
                               android:layout_width="40dp"
                               android:layout_height="40dp"
                               android:background="?attr/selectableItemBackgroundBorderless"
                               android:contentDescription="Composition boxes"
                               android:scaleType="fitCenter"
                               android:src="@drawable/f_bouquet" />

                         <TextView
                             android:id="@+id/btnCompBXBadge"
                             android:layout_width="15dp"
                             android:layout_height="15dp"
                             android:layout_alignTop="@id/btnCompBoxes"
                             android:layout_alignEnd="@id/btnCompBoxes"
                             android:layout_marginTop="1dp"
                             android:layout_marginEnd="0dp"
                             android:background="@drawable/badge_circle"
                             android:gravity="center"
                             android:text="-"
                             android:textColor="#FFFFFF"
                             android:textSize="9sp"
                             android:textStyle="bold" />
                       </RelativeLayout>

                    <!-- Botón Cajas con Badge -->
                    <RelativeLayout
                        android:id="@+id/relativeLayoutBTNBoxes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp">

                        <ImageButton
                            android:id="@+id/btnBoxesToInspect"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="Boxes to inspect"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_caja" />

                        <TextView
                            android:id="@+id/btnBoxesBadge"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_alignTop="@id/btnBoxesToInspect"
                            android:layout_alignEnd="@id/btnBoxesToInspect"
                            android:layout_marginTop="1dp"
                            android:layout_marginEnd="1dp"
                            android:background="@drawable/badge_circle"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="#FFFFFF"
                            android:textSize="9sp"
                            android:textStyle="bold" />
                    </RelativeLayout>

                    <!-- Botón Cámara con Badge -->
                    <RelativeLayout
                        android:id="@+id/relativeLayoutBTNCamera"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clipChildren="false"
                        android:clipToPadding="false">

                        <ImageButton
                            android:id="@+id/btnCamera"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="Camera"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_photocamera" />

                        <TextView
                            android:id="@+id/btnCameraBadge"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_alignTop="@id/btnCamera"
                            android:layout_alignEnd="@id/btnCamera"
                            android:layout_marginTop="1dp"
                            android:layout_marginEnd="1dp"
                            android:background="@drawable/badge_circle"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="#FFFFFF"
                            android:textSize="9sp"
                            android:textStyle="bold" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- ===================== INFORMACIÓN DEL PRODUCTO ===================== -->
            <!-- Grower -->
            <LinearLayout
                android:id="@+id/lLGrower"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp">

                <TextView
                    android:text="Grower: "
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tV_Grower"
                    android:text="-"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!-- Flower Grade -->
            <LinearLayout
                android:id="@+id/lLFloGrade"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp">

                <TextView
                    android:text="Flower Grade: "
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tV_flogra"
                    android:text="-"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!-- Flower Color -->
            <LinearLayout
                android:id="@+id/lLFloColor"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp">

                <TextView
                    android:text="Flower Color: "
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tV_flocolor"
                    android:text="-"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!-- Box Type -->
            <LinearLayout
                android:id="@+id/lLBxType"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp">

                <TextView
                    android:text="Box Type: "
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tV_boxType"
                    android:text="-"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!-- Description -->
            <LinearLayout
                android:id="@+id/lLDescription"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp">

                <TextView
                    android:text="Description: "
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tV_description"
                    android:text="-"
                    android:textSize="11sp"
                    android:textColor="#000000"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!-- Customer -->
            <LinearLayout
                android:id="@+id/lLCustomer"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="8dp">

                <TextView
                    android:text="Customer: "
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tV_customer"
                    android:text="-"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <!-- ===================== SECCIÓN DE ISSUES ===================== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp">

                <!-- Título + botón de búsqueda en la misma fila -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tVIssue"
                        android:text="Choose an Issue:"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />

                    <ImageButton
                        android:id="@+id/btnIssues"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Search issue"
                        android:scaleType="fitCenter"
                        android:src="@drawable/customsearchbutton" />
                </LinearLayout>


                <ScrollView
                    android:id="@+id/scrollIssues"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxHeight="120dp"
                    android:nestedScrollingEnabled="true"
                    android:scrollbars="vertical"
                    android:background="@drawable/descriptionissue"
                    android:padding="8dp">

                    <LinearLayout
                        android:id="@+id/containerSelectedIssues"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    </LinearLayout>
                </ScrollView>
            </LinearLayout>
            <!-- EditText para descripción -->
            <LinearLayout
                android:id="@+id/linearLayout6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvDescript"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Description Issue:" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="28dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tvTotalDescript"
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="" />
            </LinearLayout>
            <EditText
                android:id="@+id/descriptionIssue"
                android:layout_width="match_parent"
                android:layout_height="98dp"
                android:background="@drawable/descriptionissue"
                android:gravity="start|top"
                android:hint="..."
                android:importantForAutofill="no"
                android:inputType="textMultiLine"
                android:maxLines="20"
                android:padding="8dp"
                android:scrollbars="vertical"
                android:textSize="14sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <RadioGroup
                android:id="@+id/radioGroup1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="16dp">

                <RadioButton
                    android:id="@+id/rB_QCNotification"
                    android:text="QC NOTIFICACION"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true" />

                <Space
                    android:layout_width="10dp"
                    android:layout_height="wrap_content" />

                <RadioButton
                    android:id="@+id/rB_QCAction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="QC LOCAL"
                    android:textSize="13sp" />

                <Space
                    android:layout_width="10dp"
                    android:layout_height="wrap_content" />

                <RadioButton
                    android:id="@+id/rB_QCRelease"
                    android:text="Release"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

            </RadioGroup>

            <TextView
                android:id="@+id/tVAction"
                android:text="QC LOCAL:"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:visibility="invisible" />

            <LinearLayout
                android:id="@+id/linearLayoutActions"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/TVActionChoosed"
                    android:hint="..."
                    android:textSize="12sp"
                    android:textColor="#000000"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    android:paddingEnd="8dp" />

                <ImageButton
                    android:id="@+id/btnActions"
                    android:src="@drawable/customsearchbutton"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:scaleType="fitCenter"
                    android:visibility="invisible"
                    android:contentDescription="Search action" />
            </LinearLayout>
            <TextView
                android:id="@+id/tVNotification"
                android:text="QC NOTIFICATION:"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:visibility="invisible" />

            <LinearLayout
                android:id="@+id/linearLayoutNotifications"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/TVNotificationChoosed"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="..."
                    android:paddingEnd="8dp"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:visibility="invisible" />

                <ImageButton
                    android:id="@+id/btnNotifications"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Search notification"
                    android:scaleType="fitCenter"
                    android:src="@drawable/customsearchbutton"
                    android:visibility="invisible" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/linearLayout4"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:weightSum="3">

                <Button
                    android:id="@+id/btn_Rejectbx"
                    android:text="DELETE"
                    android:textColor="@android:color/white"
                    android:background="@drawable/deletebutton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingVertical="10dp"
                    android:textSize="13sp" />

                <Space
                    android:layout_width="8dp"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/btn_SaveReport"
                    android:text="SAVE"
                    android:textColor="@android:color/white"
                    android:background="@drawable/savebutton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingVertical="10dp"
                    android:textSize="13sp" />

                <Space
                    android:layout_width="8dp"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/btn_SendReport"
                    android:text="SEND TO\nQC HISTORY"
                    android:textColor="@android:color/white"
                    android:background="@drawable/sendbutton"
                    android:enabled="false"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="11sp" />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:visibility="gone" />

</RelativeLayout>