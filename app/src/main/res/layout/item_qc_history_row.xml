<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/LQCHistoryItems">

    <LinearLayout
        android:id="@+id/LLQCHistoryRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:background="@android:color/white">

        <!-- Ícono QAReason (Saved/Sent/Modified/Default) -->
        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="30dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_flower"
            android:focusable="false"
            android:layout_marginEnd="15dp"
            android:scaleType="centerInside" />

        <!-- Información del historial -->
        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <!-- Código: Grower-BAWB-TELEX-NUM -->
            <TextView
                android:id="@+id/tV_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Medium Text"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="20sp"
                android:textColor="#000000" />

            <!-- ORDER: num-row BOXES: X -->
            <TextView
                android:id="@+id/tV_FirstData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Medium Text"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="10sp"
                android:textColor="#666666" />

            <!-- Author: [X] QAInspector:[Y] QAReason:Z -->
            <TextView
                android:id="@+id/tV_SecondData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Medium Text"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="10sp"
                android:textColor="#666666" />

            <!-- Fecha de inspección -->
            <TextView
                android:id="@+id/tV_ThirdData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Medium Text"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="10sp"
                android:textColor="#999999" />

        </LinearLayout>

        <!-- Ícono Author (QA o S) -->
        <ImageView
            android:id="@+id/iV_QCHAuthor"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/letter_s"
            android:focusable="false"
            android:scaleType="fitCenter" />

        <Space
            android:id="@+id/space112"
            android:layout_width="5dp"
            android:layout_height="match_parent" />

        <!-- Ícono InspectionStatus -->
        <ImageView
            android:id="@+id/iV_QCInspection"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/interfaceuninspected"
            android:focusable="false"
            android:scaleType="fitCenter" />

    </LinearLayout>

</LinearLayout>