<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardOrder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Ícono del Author (QA o S) -->
        <ImageView
            android:id="@+id/ivAuthor"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_flower"
            android:layout_marginEnd="16dp" />

        <!-- Información de la orden -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Grower-AWB-TELEX -->
            <TextView
                android:id="@+id/tvOrderCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PL-3361-10072025"
                android:textColor="@color/text_secondary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- BoxId o cantidad de boxes -->
            <TextView
                android:id="@+id/tvOrderNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BoxId"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Ícono IsSaved (visible solo si está guardado) -->
        <ImageView
            android:id="@+id/ivIsSaved"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/baseline_check_24"
            app:tint="@color/green"
            android:visibility="gone"
            android:layout_marginEnd="8dp" />

        <!-- Botón QA -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnQA"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:text="QA"
            android:textSize="12sp"
            android:textColor="@android:color/black"
            android:backgroundTint="@color/yellow"
            app:cornerRadius="24dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:layout_marginEnd="8dp" />

        <!-- Botón X (eliminar/rechazar) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDelete"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:text="✕"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:backgroundTint="@color/red"
            app:cornerRadius="24dp"
            android:insetTop="0dp"
            android:insetBottom="0dp" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>