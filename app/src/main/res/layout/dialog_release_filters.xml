<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:paddingBottom="90dp"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Filters"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#212121" />

                <TextView
                    android:id="@+id/tvFilterCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 active"
                    android:textSize="13sp"
                    android:textColor="#757575"
                    android:background="#E0E0E0"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp" />
            </LinearLayout>

            <!-- Date Range Card -->
            <!-- ✅ AGREGADO: android:id="@+id/llDateSection" -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/llDateSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Date Range"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#212121" />

                        <CheckBox
                            android:id="@+id/cbDateAll"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="All"
                            android:textSize="14sp"
                            android:textColor="#212121"
                            android:checked="true"
                            android:buttonTint="#4CAF50" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvStartDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Start Date: Not selected"
                        android:textSize="13sp"
                        android:textColor="#757575"
                        android:layout_marginBottom="8dp"
                        android:enabled="false" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSelectStartDate"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="Select Start Date"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="#2196F3"
                        app:icon="@drawable/baseline_calendar_month_24"
                        app:iconTint="#FFFFFF"
                        app:iconGravity="textStart"
                        app:cornerRadius="8dp"
                        android:textAllCaps="false"
                        android:textSize="15sp"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:id="@+id/tvEndDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="End Date: Not selected"
                        android:textSize="13sp"
                        android:textColor="#757575"
                        android:layout_marginBottom="8dp"
                        android:enabled="false" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSelectEndDate"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="Select End Date"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="#2196F3"
                        app:icon="@drawable/baseline_calendar_month_24"
                        app:iconTint="#FFFFFF"
                        app:iconGravity="textStart"
                        app:cornerRadius="8dp"
                        android:textAllCaps="false"
                        android:textSize="15sp"
                        android:layout_marginBottom="8dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnClearDates"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="Clear Dates"
                        android:textColor="#757575"
                        android:backgroundTint="#FFFFFF"
                        app:strokeColor="#E0E0E0"
                        app:strokeWidth="1dp"
                        app:cornerRadius="8dp"
                        android:textAllCaps="false"
                        android:textSize="15sp" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Users Card -->
            <!-- ✅ AGREGADO: android:id="@+id/llUsersSection" -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/llUsersSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Filter by User"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#212121" />

                        <CheckBox
                            android:id="@+id/cbUsersAll"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="All"
                            android:textSize="14sp"
                            android:textColor="#212121"
                            android:checked="true"
                            android:buttonTint="#4CAF50" />
                    </LinearLayout>

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxHeight="200dp"
                        android:background="#F5F5F5"
                        android:padding="8dp">

                        <LinearLayout
                            android:id="@+id/usersContainer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" />
                    </ScrollView>

                    <TextView
                        android:id="@+id/tvUsersSelected"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="No users selected"
                        android:textSize="13sp"
                        android:textColor="#9E9E9E"
                        android:layout_marginTop="8dp"
                        android:enabled="false" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Box/Barcode Card with Selector -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Filter by Box"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#212121" />

                        <CheckBox
                            android:id="@+id/cbBoxesAll"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="All"
                            android:textSize="14sp"
                            android:textColor="#212121"
                            android:checked="true"
                            android:buttonTint="#4CAF50" />
                    </LinearLayout>

                    <!-- Selector Dropdown -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Select from list or scan:"
                        android:textSize="13sp"
                        android:textColor="#757575"
                        android:layout_marginBottom="8dp" />

                    <Spinner
                        android:id="@+id/spinnerBoxSelector"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/spinner_background"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:layout_marginBottom="8dp"
                        android:spinnerMode="dropdown" />

                    <!-- Scan Input Section -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Or scan/type manually:"
                        android:textSize="13sp"
                        android:textColor="#757575"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="8dp" />

                    <EditText
                        android:id="@+id/etBoxSearch"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="Scan or type box ID"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:background="@drawable/edit_text_background"
                        android:textColor="#212121"
                        android:textColorHint="#9E9E9E"
                        android:inputType="text"
                        android:imeOptions="actionDone"
                        android:singleLine="true"
                        android:maxLines="1"
                        android:layout_marginBottom="8dp" />

                    <!-- Botones Scan y Clear -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnScanBox"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:text="Scan"
                            android:textColor="#FFFFFF"
                            android:backgroundTint="#FF9800"
                            app:icon="@drawable/baseline_qr_code_scanner_24"
                            app:iconTint="#FFFFFF"
                            app:cornerRadius="8dp"
                            android:textAllCaps="false"
                            android:textSize="15sp"
                            android:layout_marginEnd="8dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnClearBoxes"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:text="Clear"
                            android:textColor="#757575"
                            android:backgroundTint="#FFFFFF"
                            app:strokeColor="#E0E0E0"
                            app:strokeWidth="1dp"
                            app:cornerRadius="8dp"
                            android:textAllCaps="false"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <!-- Display de códigos seleccionados -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp"
                        android:background="#F5F5F5"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/baseline_qr_code_scanner_24"
                            android:layout_marginEnd="12dp"
                            app:tint="#757575" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvBoxesCount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="No boxes selected"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#424242" />

                            <TextView
                                android:id="@+id/tvBoxesList"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textSize="12sp"
                                android:textColor="#757575"
                                android:maxLines="2"
                                android:ellipsize="end"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:elevation="8dp"
        android:padding="16dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnClearFilters"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:text="Clear"
            android:textColor="#757575"
            android:backgroundTint="#FFFFFF"
            app:strokeColor="#E0E0E0"
            app:strokeWidth="1dp"
            app:cornerRadius="8dp"
            android:textAllCaps="false"
            android:textSize="15sp"
            android:layout_marginEnd="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:text="Cancel"
            android:textColor="#FFFFFF"
            android:backgroundTint="#757575"
            app:cornerRadius="8dp"
            android:textAllCaps="false"
            android:textSize="15sp"
            android:layout_marginEnd="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnApplyFilters"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:text="Apply"
            android:textColor="#FFFFFF"
            android:backgroundTint="#4CAF50"
            app:cornerRadius="8dp"
            android:textAllCaps="false"
            android:textSize="15sp" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>