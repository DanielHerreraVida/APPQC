<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/white">
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#F5F5F5"
        android:padding="12dp">

        <TextView
            android:text="BOXES COMPOSITION:"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvQtyBox"
            android:text="0"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#4CAF50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/headersLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/headerLayout"
        android:layout_marginTop="12dp"
        android:background="#E0E0E0"
        android:padding="10dp"
        android:elevation="2dp">

        <TextView
            android:text="Barcode"
            android:textStyle="bold"
            android:textColor="#424242"
            android:textSize="14sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Flo Cod"
            android:textStyle="bold"
            android:textColor="#424242"
            android:textSize="14sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Composition"
            android:textStyle="bold"
            android:textColor="#424242"
            android:textSize="14sp"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:textAlignment="center"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Issues"
            android:textStyle="bold"
            android:textColor="#424242"
            android:textSize="14sp"
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:textAlignment="center"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/contentLayout"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@id/headersLayout"
        android:layout_marginTop="8dp">

        <ListView
            android:id="@+id/lvBoxComposition"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="#E0E0E0"
            android:dividerHeight="1dp"
            android:scrollbars="vertical" />

        <TextView
            android:id="@+id/tvEmptyMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="No compositions available"
            android:textSize="16sp"
            android:textColor="#999999"
            android:visibility="gone"/>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/tvSelectedComp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/contentLayout"
        android:layout_marginTop="8dp"
        android:text="Selected Comp:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#333"/>
    <LinearLayout
        android:id="@+id/LLIssues"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvSelectedComp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvIssueChoosed"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="No issues selected..."
            android:textSize="12sp"
            android:padding="8dp"
            android:background="#F0F0F0"/>
        <ImageButton
            android:id="@+id/btnIssues"
            android:src="@drawable/customsearchbutton"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:scaleType="fitCenter"
            android:contentDescription="Search issue" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/LLIssues"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnClose"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="CANCEL"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:background="@drawable/deletebutton"/>

        <Space
            android:layout_width="30dp"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/btnContinue"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="CONTINUE"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:background="@drawable/savebutton"/>
    </LinearLayout>

</RelativeLayout>

