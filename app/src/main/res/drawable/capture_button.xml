<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Círculo exterior (borde) -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#FFFFFF" />
            <size
                android:width="72dp"
                android:height="72dp" />
        </shape>
    </item>

    <!-- Círculo interior -->
    <item
        android:bottom="6dp"
        android:left="6dp"
        android:right="6dp"
        android:top="6dp">
        <shape android:shape="oval">
            <solid android:color="#E0E0E0" />
        </shape>
    </item>

</layer-list>